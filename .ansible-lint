parseable: true
quiet: false
skip_list:
    - 204  # Lines should be no longer than 160 chars
    - 206  # Variables should have spaces before and after
    - 301  # Commands should not change things if nothing needs doing
    - 302  # rm used in place of argument state=absent to file module
    - 303  # curl used in place of get_url or uri module
    - 305  # Use shell only when shell functionality is required
    - 306  # Shells that use pipes should set the pipefail option
    - 401  # Git checkouts must contain explicit version
    - 502  # All tasks should be named
    - 503  # Tasks that run when changed should likely be handlers
    - 601  # Don't compare to literal True/False
    - 602  # Don't compare to empty string

verbosity: 1
